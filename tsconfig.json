{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "jest"],
    "baseUrl": ".",
    "paths": {
      "@services": ["src/server/services"],
      "@models": ["src/server/models"],
      "@utils": ["src/server/utils"]
    },
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules"]
}